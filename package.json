{
  "name": "churchflow-next-ssc-pro8",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "env:test": "node -e \"require('dotenv').config({path:'.env.local'}); console.log('Environment loaded:', Object.keys(process.env).filter(k => k.includes('DATABASE') || k.includes('SENDGRID') || k.includes('TWILIO') || k.includes('CLOUDINARY') || k.includes('NEXTAUTH')).length, 'variables')\"",
    "env:validate": "node -e \"require('dotenv').config({path:'.env.local'}); const required = ['DATABASE_URL', 'SENDGRID_API_KEY', 'TWILIO_ACCOUNT_SID', 'CLOUDINARY_CLOUD_NAME', 'NEXTAUTH_SECRET']; const missing = required.filter(k => !process.env[k]); console.log(missing.length === 0 ? '✅ All required environment variables are set' : '❌ Missing:', missing.join(', '))\"",
    "permissions:check": "./fix-permissions.sh check",
    "permissions:fix": "./fix-permissions.sh set",
    "test:services": "node test-external-services.js",
    "test:api": "node test-api-endpoints.js",
    "test:all": "npm run env:validate && npm run test:services && npm run test:api"
  },
  "prisma": {
    "seed": "node ./prisma/seed.js"
  },
