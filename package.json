    "multer": "^2.0.2",
    "next": "^15.5.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "pm2": "^6.0.13",
    "postcss": "^8",
    "qrcode": "^1.5.3",
    "react": "^18",
    "react-dom": "^18",
